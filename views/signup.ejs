<!-- signup form -->
<style>
  .form-control {
    margin-top: 12px;
    margin-bottom: 12px;
  }
</style>
<nav class="navbar bg-body-tertiary">
  <div
    style="display: flex; align-items: center; justify-content: space-between"
  >
    <a class="navbar-brand px-3" href="/" style="color: #5928e5">
      <b>GDSC UVCE</b>
    </a>
  </div>
</nav>

<center>
  <div class="card my-5" style="width: 30rem">
    <div
      class="card-body"
      style="
        display: flex;
        justify-content: center;
        flex-direction: column;
        padding-top: 25px;
      "
    >
      <u><h2>Signup here!</h2></u>
      <form
        method="post"
        action="/signup"
        style="display: flex; justify-content: center; flex-direction: column"
      >
        <input
          type="text"
          name="name"
          class="form-control"
          required
          placeholder="Enter your name"
        />
        <input
          type="text"
          name="branch"
          class="form-control"
          required
          placeholder="Enter your branch"
        />
        <input
          type="text"
          name="year"
          class="form-control"
          required
          placeholder="Enter your year"
        />
        <input
          type="text"
          name="instagram"
          class="form-control"
          placeholder="Enter your instagram username"
        />
        <input
          type="text"
          name="username"
          class="form-control"
          required
          placeholder="Enter your username"
        />
        <input
          type="password"
          name="password"
          class="form-control"
          required
          placeholder="Enter your password"
        />
        <div class="mt-3">
          <label
            ><input type="checkbox" name="checkbox" value="value" /> Display my
            Instagram handle on the Participant list page?</label
          >
          <!-- <input type="checkbox" name="shareInstagram" />
              <label>
                Display my Instagram handle on the Participant list page?</label
              > -->
        </div>
        <br />
        <input type="submit" value="Signup" class="btn btn-primary" />
        <br />
      </form>
    </div>
  </div>
</center>
